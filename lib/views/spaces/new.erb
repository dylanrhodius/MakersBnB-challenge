<div class = "container">

  <div class="row">
    <div class="col-3"></div>
      <div class="col-6">

        <div class="list-space-form">
          <div id="listform-title">
            <h3>List a new space</h3>
          </div>

          <form action="/spaces" method="post">

            <div class="form-group">
              <label class="sr-only" for="name">Name</label>
              <input type="text" name="name" class="form-control" id="name" placeholder="Name" required>
            </div>

            <div class="form-group">
              <label class="sr-only" for="description">Description</label>
              <textarea name="description" class="form-control" rows="3" id="description" placeholder="Please enter your description here..." required></textarea>
            </div>

            <div class="row">

              <div class="input-group col-12">
                <span class="input-group-addon">
                  <span class="fa fa-gbp fa-fw" aria-hidden="true"></span>
                </span>
                  <label class="sr-only" for="price"></label>
                  <input type="number" name="price" min="0" max="1000" class="form-control" id="price" placeholder="Price per night" required>
              </div>

                <!-- <div class="form-group col-2">
                    <span class="input-group-addon" id="pound-sign">Â£</span>
                </div>

                <div class="form-group col-10">
                  <label class="control-label" for="price"></label>
                  <input type="number" style="width: 110%" name="price" min="0" max="1000" class="form-control" id="price" placeholder="Price Per Night" required>
                </div> -->
            </div>

            <div class="row">
                <div class="form-group col-6">
                  <br>
                  <label for="start_date">Available From:</label>
                  <div class="input-group date" id="list_date_picker">
                    <input type="date" name="start_date" class="form-control"><span class="input-group-addon"><i class="fa fa-calendar fa-fw"></i></span>
                  </div>
                </div>

                <div class="form-group col-6">
                  <br>
                  <label for="end_date">Available Until:</label>
                  <div class="input-group date" id="list_date_picker">
                    <input type="date" name="end_date" class="form-control"><span class="input-group-addon"><i class="fa fa-calendar fa-fw"></i></span>
                  </div>
                </div>
            </div>

            <div class="form-group">
              <label class="sr-only" for="img_url">Image URL</label>
              <input type="text" name="img_url" class="form-control" id="img_url" placeholder="Image URL" required>
            </div>

            <div>
              <button type="submit" class="btn btn-lg" id="listspace-button" value="List">List Space</button>
            </div>

          </form>

        </div>
      </div>
  </div>
</div>
